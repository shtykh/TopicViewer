<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="host" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="localhost"/>
    </bean>

    <bean id="port" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="8080"/>
    </bean>

	<bean id="htmlHelper" class="shtykh.topic.util.HtmlHelper"/>

    <bean id="errorPageRef" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="errorPageRef"/>
    </bean>

    <bean id="topicPageRef" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="topic/stat"/>
    </bean>

    <bean id="topicPartitionList" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="topic/list"/>
    </bean>

    <bean id="provider" class="shtykh.topic.TopicReader"/>
    
    <bean id="topicViewerController" class="shtykh.topic.TopicViewerController">
    </bean>
</beans>